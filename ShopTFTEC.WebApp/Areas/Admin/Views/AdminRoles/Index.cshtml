@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}


<div>
    <h2>Roles</h2>
</div>
<hr />

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-secondary">
                    <span title="Criar Role" class="fas fa-plus"></span> Nova Role
                </a>
                
            </div>
        </div>
    </div>
</div>

<br />

<table class="table table-hover">

    <tr class="table-primary"><th>ID</th><th>Nome</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td>
                <form asp-action="Update" asp-route-id="@role.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Editar Roles
                    </button>
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Deletar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>